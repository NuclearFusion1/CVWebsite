<section id="contact" class="s-contact target-section">

    <div class="overlay"></div>

    <div class="row narrow section-intro">
        <div class="col-full">
            <h3>Contact</h3>
            <h1>Send a Message</h1>

            <p class="lead">Please get in touch below, I will endeavour to respond as soon as possible.</p>
        </div>
    </div>


    <div class="row contact__main">
        <div class="full-width tab-full contact__form">
            @using (Html.BeginForm("Contact", "Contact", FormMethod.Post, new { @id = "contactForm" }))
            {
                @Html.AntiForgeryToken()
                <fieldset>

                    <div class="form-field">
                        @Html.TextBoxFor(m => m.name, new { @placeholder = @Html.DisplayNameFor(m => m.name), @maxlength = "100", @required = "", @class = "full-width" })
                        @Html.ValidationMessageFor(m => m.name)
                    </div>
                    <div class="form-field">
                        @Html.TextBoxFor(m => m.email, new { @type = "email", @placeholder = @Html.DisplayNameFor(m => m.email), @maxlength = "100", @required = "", @class = "full-width" })
                        @Html.ValidationMessageFor(m => m.email)
                    </div>
                    <div class="form-field">
                        @Html.TextBoxFor(m => m.subject, new { @placeholder = @Html.DisplayNameFor(m => m.subject), @maxlength = "200", @class = "full-width" })
                        @Html.ValidationMessageFor(m => m.subject)
                    </div>
                    <div class="form-field">
                        @Html.TextAreaFor(m => m.message, new { @placeholder = @Html.DisplayNameFor(m => m.message), @rows = 10, @cols = 50, @maxlength = "2000", @required = "", @class = "full-width" })
                        @Html.ValidationMessageFor(m => m.message)
                    </div>
                    <div class="form-field">
                        <button class="full-width btn--primary">Submit</button>
                        <div class="submit-loader">
                            <div class="text-loader">Sending...</div>
                            <div class="s-loader">
                                <div class="bounce1"></div>
                                <div class="bounce2"></div>
                                <div class="bounce3"></div>
                            </div>
                        </div>
                    </div>

                </fieldset>
            }

            <!-- contact-warning -->
            <div class="message-warning">
                Something went wrong. Please try again.
            </div>

            <!-- contact-success -->
            <div class="message-success align-center">
                Your message was sent, thank you!<br>
            </div>

        </div>

    </div>

</section> <!-- end s-contact -->
